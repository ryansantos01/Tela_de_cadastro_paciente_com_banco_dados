<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Tela_de_cadastro_paciente_com_banco_dados"
        parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge"><!--Coloquei o Bridge para funcionar a nova cor da letra no Action Bar-->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/laranja_escuro</item><!--Muda a cor do Action Bar-->
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item><!--@color/white-->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="titleTextColor">@color/black</item><!--Muda a cor das letras da Action Bar-->
        <!-- Status bar color. -->
        <item name="android:statusBarColor"
        tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>
    <style
        name="TamanhoLetra"
        parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">30sp</item>
